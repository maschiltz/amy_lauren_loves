  <div class="container">
    <div class="row">
      <div class="left-sidebar">
        <div class="logo-container">
          <img id="logo" src="/images/aLlogo3.png" data-pin-no-hover="true" />
        </div><br clear="all" />
        <div class="sidebar-links">
          <ul class="my-navbar">
