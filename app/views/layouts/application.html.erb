              <li><%= link_to "LOGOUT", destroy_user_session_path, method: :delete, :class => 'class_here' %></li><br />
              <li><%= link_to "CREATE BLOG", new_blog_entry_path %></li><br />
              <li><%= link_to "MAKE GALLERY", new_image_link_path %></li><br />
              <li><%= link_to "EDIT GALLERY", image_links_path %></li>
              <li><%= link_to "EDIT SLIDESHOW", slides_path %></li>
            <% end %>
          </ul>
        </div>
      </div>
      <div class="non-left-sidebar">
       <div style="z-index: 9000000; background-color:white; width:1022px; top: 0px;">
         <img class="facebook_icon" src="/images/facebook_icon.png" onclick="window.open('http://www.facebook.com/amylaurencreates')" />
         <div class="navbar-container">
          <ul class="my-navbar">
            <li><%= link_to "HOME", root_path %></li>
            <li><a href="/blog_entries/7-meet-the-fam">ABOUT</a></li>
            <li><%= link_to "BLOG", blog_entries_path %></li>
