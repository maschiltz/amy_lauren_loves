           <%= link_to "LOGIN", new_user_session_path %>
         <% end %>
       </div>
     </div>
   </div>
 </div>

<% if notice %>
  <p class="notice hidden"><%= notice %></p>
<% end %>
<% if alert %>
  <p class="alert hidden"><%= alert %></p>
<% end %>

<div id="grey" class="hidden"></div>
