<% if (!(@slides.nil?)) %>
  <div id="slideshow_holder">
  <% @slides.each_with_index do |slide, index| %>
    <div class="slide_holder" style="overflow: hidden; float: left;">
      <%= image_tag slide.image.url, :id => 'slide_'+index.to_s, :class => index == 0 ? 'slide' : 'slide hidden' %>
    </div>
  <% end %>
  </div>
  <br />
  <div style="border-top: 1px solid #aaa; border-bottom: 1px solid #aaa; width: 998px; height: 25px;">
    <span class="blog_title" style="font-size: 33px; top: -5px; position: relative;">Recent Work...</span>
  </div>
  <br />
<% end %>
<% @list.each do |item| %>
  <% if item.has_attribute?('link') %>
<div data-link="<%= item.link %>" class="small-image love-link blog-holder">
  <% else %>
<div class="small-image blog-holder" data-id="<%= item.id %>" data-url="/blog_entries/<%= item.to_param %>">
  <% end %>
  <span class="home-blog-title">
    <h2><a href="/blog_entries/<%= item.id %>"><%= item.title %></a></h2>
  </span>
  <% if item.image_file_name %>
    <% if item.class.name == 'BlogEntry' && !item.fade.nil? && item.fade > 0 %>
      <%= image_tag item.image.url(:medium), class: 'small-home-image-reverse' %>
    <% else %>
      <%= image_tag item.image.url(:medium), class: 'small-home-image' %>
    <% end %>
  <% else %>
    <div class="small-home-image" style="background-color: #BFE0E2; width: 100%; height: 100%; opacity: .0;"></div>
  <% end %>
</div>
<% end %>
