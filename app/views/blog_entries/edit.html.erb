<%= form_for @blog_entry, url: blog_entry_path(@blog_entry), method: :patch, html: {:multipart => true} do |f| %>
 <div class="editable_blog_text_fields">
  <%= f.label(:posted, "Post Date: ") %>
  <%= f.date_field(:posted) %>
  <br />
  <%= f.label(:featured, "Featured: ") %>
  <%= f.text_field(:featured) %>
  <br />
  <%= f.label(:title, "Title: ") %>
  <%= f.text_field(:title) %>
  <br />
  <%= f.label(:tags, "Tags: ") %>
  <br />
  <% Tag.all.each do |tag| %>
    <%= check_box_tag 'blog_entry[tag_ids][]', tag.id, (@b_tags.select {|t| t['id'] == tag.id}.length > 0) ? true : false %>
    <%= tag.name %>
    <br />
  <% end %>
 </div>
  <br />
  <%= f.label(:show_on_home, "Show On Home? ") %>
  <%= f.check_box :show_on_home %>
  <br />
  <%= f.label(:image, "Cover Image: ") %>
  <%= f.file_field :image %>
  <br />
  <%= f.label(:text, "Body: ") %>
  <%= f.cktext_area(:text, :height => '500px') %>
  <br />
  <%= f.submit("Update") %>
<% end %>
<br /><br />
